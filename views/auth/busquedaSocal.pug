extends ./layout/index


block contenido
    div(class="py-5")
        
    
        section(classa="py-5")
            h2(class="text-center text-4xl font-extrabold py-10")= pagina

            //-pre= JSON.stringify(equipos, undefined, 2)

            
        if equipos.length
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each equipo in equipos 
                    div(class="bg-white shadow rounded-lg")
                        img(class="object-cover h-72 w-full" src=`/uploads/${equipo.imagen}` alt=`imagen equipo`)
                        div(class="p-5 space-y-3")
                            h3(class="text-2xl font-bold uppercase text-center")= equipo.titulo
                                p(class="font-bold text-gray-800 text-lg") Patente:  
                                        span(class="font-normal")= equipo.patente
                                p(class="font-bold text-gray-800 text-lg") Ubicacion:  
                                        span(class="font-normal")= equipo.categorium.nombre
                                p(class="font-bold text-gray-800 text-lg") Faena:  
                                        span(class="font-normal")= equipo.faena.nombre   
                                        
                                div(class="m-auto w-full p-5") 
                                    form(action="")  

                                    a(href=`/equipos/editar/${equipo.id}` class="text-center px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer bg-orange-500 text-white w-full") Editar 
                                                    
                                
        else 
            p(class="text-center text-gray-800 txt-sm py-10 uppercase text-3xl") No Existen Resultados