extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div(class="py-5")

        
        h1(class="text-center text-4xl font-extrabold py-4") Equipos



        

        


        form(action="/auth/buscador" method="POST" class="text-center py-2")
                input(type="hidden" name="_csrf" value=csrfToken)
                label(for="termino" class="text-sm uppercase font-bold text-white")
                input(type="text" id="termino" name="termino" placeholder="Buscar" class="p-2 rounded-lg shadow text-sm")
                

                input(type="submit" class="bg-yellow-400 rounded-lg hover:bg-yellow-300 text-white uppercase font-bold p-2 cursor-pointer text-sm" value="Buscar") 
                    


        div(class="md:flex md:gap-4 space-y-5 md:space-y-0 py-2")
            div(class="w-full")
                label.block.text-sm.uppercase.text-black.mb-2.font-extrabold.text-center Filtrar Por Ubicacion 
                <select name="ELEGIR" value="ELEGIR" onchange="document.location.href=this.value" id="countries" class="w-full px-3 py-2 border border-gray-300.rounded-md placeholder-gray-400">
                        <option selected value="/auth/inicio">-Seleccione-</option>
                        <option value="/auth/categorias/2">Lautaro</option>
                        <option value="/auth/categorias/3">Valdivia</option>
                        <option value="/auth/categorias/4">Perquenco</option>
                        <option value="/auth/categorias/5">Osorno</option>
                        <option value="/auth/categorias/6">Villarica</option>
                        <option value="/auth/categorias/7">Niebla</option>
                        <option value="/auth/categorias/1">Temuco</option>

                </select>
                    
            div(class="w-full")
                label.block.text-sm.uppercase.text-black.mb-2.font-extrabold.text-center Filtrar Por Faena
                <select name="ELEGIR" value="ELEGIR" onchange="document.location.href=this.value" id="countries" class="w-full px-3 py-2 border border-gray-300.rounded-md placeholder-gray-400">
                        <option selected value="/auth/inicio">-Seleccione-</option>
                        <option value="/auth/categorias/2">Lautaro</option>
                        <option value="/auth/categorias/3">Valdivia</option>
                        <option value="/auth/categorias/4">Perquenco</option>
                        <option value="/auth/categorias/5">Osorno</option>
                        <option value="/auth/categorias/6">Villarica</option>
                        <option value="/auth/categorias/7">Niebla</option>
                        <option value="/auth/categorias/1">Temuco</option>

                </select>

            


       

        section(classa="py-5")
            

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each casa in casas
                    div(class="bg-white shadow rounded-lg")
                        img(class="object-cover h-72 w-full" src=`/uploads/${casa.imagen}` alt=`imagen casa`)
                        div(class="p-5 space-y-3")
                            h3(class="text-2xl font-bold uppercase text-center")= casa.titulo
                            a(href=`/equipo/${casa.id}` class="bg-yellow-400 hover:bg-yellow-300 w-full text-center block font-bold text-white p-2 uppercase rounded") Ver
                            


block  scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
