extends ./layout/index

block contenido
        if errores
        
            div(class="max-w-md mx-auto md-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-4.mx-auto.max-w-md
            .bg-white.py-4.px-4.shadow
                <img class="max-w-xs mt-1 mx-auto" src="/uploads/socal.png" alt="image description">
                form.space-y-5(method="POST" action="/auth/login" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    

                    div     
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-extrabold(for="email") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")

                    div     
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-extrabold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu password" type="password" name="password")

                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/registro") ¿No Tienes Cuenta? Crea Una 
                        a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi Password


                    input(class="w-full bg-yellow-400 hover:bg-yellow-300 text-white font-bold py-3 cursor-pointer" type="submit" value="Iniciar Sesión")