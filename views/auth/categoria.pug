extends ./layout/app


block contenido
    div(class="py-5")
        
    
        section(classa="py-5")
            h2(class="text-center text-4xl font-extrabold py-10")= pagina

            
        if equipos.length
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each equipo in equipos
                    div(class="bg-white shadow rounded-lg")
                        img(class="object-cover h-72 w-full" src=`/uploads/${equipo.imagen}` alt=`imagen propiedad`)
                        div(class="p-5 space-y-3")
                            h3(class="text-2xl font-bold uppercase text-center")= equipo.titulo
                            a(href=`/equipo/${equipo.id}` class="bg-yellow-400 hover:bg-yellow-300 w-full text-center block font-bold text-white p-2 uppercase rounded") Ver
            
        else 
            p(class="text-center text-gray-800 txt-sm py-10 uppercase text-3xl") No Existen Resultados
                            



                                    


