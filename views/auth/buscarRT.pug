extends ./layout/index


block contenido
    div(class="py-5")
        
        section(classa="py-5")
            h2(class="text-center text-4xl font-extrabold py-10")= pagina

          

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each rtecnica in rtecnicas 
                    div(class="bg-white shadow rounded-lg")
                        img(class="object-cover h-72 w-full" src=`/uploads/${rtecnica.equipo.imagen}` alt=`imagen equipo`)
                        div(class="p-5 space-y-3")
                            h3(class="text-2xl font-bold uppercase text-center")= rtecnica.equipo.titulo
                                p(class="font-bold text-gray-800 text-lg") Patente:  
                                        span(class="font-normal")= rtecnica.equipo.patente
                                p(class="font-bold text-gray-800 text-lg") Fecha Inicio:  
                                        span(class="font-normal")= formatiarFechaMantencion (rtecnica.fechainicio)
                                p(class="font-bold text-gray-800 text-lg") Fecha Fin:  
                                        span(class="font-normal")= formatiarFechaMantencion (rtecnica.fechafin)
                                p(class="font-bold text-gray-800 text-lg") Descripcion:  
                                        span(class="font-normal")= rtecnica.descripcion
                            