extends ./layout/index

block contenido
    .py-10
        h2.text-center.text-2xl.font-extrabold= pagina 

        a(href="/propiedades/crear" class="rouded py-2 px-10  bg-yellow-300 hover:bg-yellow-400 text-sm  font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Ingresar Equipos



        
        //pre= JSON.stringify(propiedades, undefined, 2)

        if propiedades.length 
            div(class="bg-white shadow rounded-lg")
                ul(class="divide-y divide-gray-200")
                    each propiedad in propiedades   
                        li  
                            div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 md:space-y-0 gap-4")
                                div(class="sm:w-1/4 md:w-1/6") 
                                    img(src=`uploads/${propiedad.imagen}`, alt=`Imagen Propiedad ${propiedad.titulo}` class="w-full block")         
                                div(class="sm:w-2/4 md:w-3/6 lg:w-4/6 space-y-3") 
                                    a(class="block text-2xl font-extrabold text-black truncate" href=`/propiedad/${propiedad.id}`)= propiedad.titulo
                                    p(class="text-sm text-black font-bold")= propiedad.categorium.nombre
                                    
                                    //p(class="text-sm text-gray-500 font-bold flex items-center")
                                        svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                                            path(stroke-linecap='round' stroke-linejoin='round' d='M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z')
     
                                        = propiedad.precio.nombre
                                    
                                    a(href=`/mensaje/${propiedad.id}` class="text-sm text-gray-600")= `${propiedad.mensajes.length} Mensajes` 


                                div(class="sm:w-1/4 md:w-2/6 lg:flex-1 flex flex-col lg:flex-row gap-2") 
                                    form(action="")
                                        //input(type="submit" class=`w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer ${propiedad.publicado ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'}` value=`${propiedad.publicado ? 'Publicado' : 'No Publicado'}`)


                                    a(href=`/propiedades/editar/${propiedad.id}` class="text-center px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer bg-orange-500 text-white ") Editar 

                                    form(method="POST" action=`/propiedades/eliminar/${propiedad.id}`)
                                        input(type="hidden" name="_csrf" value=csrfToken)
                                        input(type="submit" class="w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer bg-red-100 text-red-800" value="Eliminar")
                
                
                div(class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6")
                    
                    div(class="flex-1 flex justify-between sm:hidden")
                        a(href=`/mis-propiedades?pagina=${paginaActual -1}` class=`${paginaActual == 1 ? 'pointer-events-none' : ''} relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50`) Anterior


                        a(href=`/mis-propiedades?pagina=${paginaActual +1}` class=`${paginaActual === paginas ? 'pointer-events-none' : ''} relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50`) Siguiente
                    
                    div(class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between")
                        p(class="text-sm text-gray-700 gap-2") Mostrando 
                            span(class="font-medium") #{offset +1} a 
                            span(class="font-medium") #{total < limit + offset ? total : limit + offset} de 
                            span(class="font-medium") #{total} resultados
                    
                    div(class="hidden sm:block")
                        nav(class="relative z-0 inline-flex rouded-md shadow-md")
                            - var n = 1;
                                while n <= paginas
                                    a(href=`/mis-propiedades?pagina=${n}` class=`${paginaActual == n ? 'bg-orange-50 hover:bg-orange-400 border-orange-500 text-black' : 'bg-white border-gray-300 text-gray-500 hover:bg-gray-50' } relarive inline-flex items-center px-4 py-2 border text-sm font-medium`) #{n++} 
        
        
        else 
            p.text-center No Existen Propiedades