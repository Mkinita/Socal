extends ./layout/index


block contenido
    .py-2
        h2.text-center.text-2xl.font-extrabold.uppercase= pagina 

        if errores
            div(class="max-w-md mx-auto md-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8(method="POST" action="/ubicaciones/crear-ubicacion" noValidate)
                input(type="hidden" name="_csrf" value=csrfToken)

                div.space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Agergar Nueva Ubicacion
                    
                    
                    div     
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-extrabold(for="numeropoliza") Ciudad/Comuna
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombre de la ciudad o comuna" name="nombre" value= datos.nombre? datos.nombre : '')
                    
                   



                    




                input(class="w-full py-3 bg-yellow-400 hover:bg-yellow-300 rounded-lg text-white font-bold uppercase cursor-pointe" type="submit" value="Guardar")

