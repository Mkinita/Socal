extends ./layout/index


block contenido
    .py-2
        h2.text-center.text-2xl.font-extrabold.uppercase= pagina 

        if errores
            div(class="max-w-md mx-auto md-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8(method="POST" action="/equipos/crear-equipo" noValidate)
                input(type="hidden" name="_csrf" value=csrfToken)

                div.space-y-5  
                    h3.text-lg.leading-6.font-medium.text-gray-900 Ingresar Equipo
                    div     
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-extrabold(for="titulo") Nombre del equipo
                        input#titulo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingrese el Nombre Del Equipo" name="titulo" value= datos.titulo? datos.titulo : '')


                    div     
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-extrabold(for="descripcion") Descripcion
                        textarea#descripcion.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingrese Descripcion" type="text" name="descripcion")= datos.descripcion ? datos.descripcion  : ''


                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")


                        div(class="w-full")    
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-extrabold(for="categoria") Ubicación
                            select#categoria.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="categoria")    
                                option(value="")  -Seleccione-
                                each categoria in categorias
                                    option(value=categoria.id selected= datos.categoria ? datos.categoria == categoria.id ? true: false : null )= categoria.nombre

                input(class="w-full py-3 bg-yellow-400 hover:bg-yellow-300 rounded-lg text-white font-bold uppercase cursor-pointe" type="submit" value="Añadir Imagen")



