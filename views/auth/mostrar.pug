extends ./layout/app



block contenido

   //pre= JSON.stringify(propiedad, undefined, 2)

   div(class="py-0")
    h1(class="text-4xl my-10 font-extrabold text-center")= equipo.titulo

    div    
        a(href="#" class="font-bold text-gray-600 text-sm") Ubicación:  
            span(class="font-normal")= equipo.categorium.nombre

    div(class="mt-5 md:flex md:gap-4 md:items-start")
        div(class="md:w-2/3 bg-white shadow rouded-lg")
            img(src=`/uploads/${equipo.imagen}`, alt=`imagen de la equipo ${equipo.titulo}`)

            div(class="px-1 py-2 space-y-5")
                //p= equipo.descripcion

                //h2(class="text-2xl leading-6 font-bold text-gray-900 ") Informaciòn equipo

                
       
        aside(class="md:w-1/3 bg-white shadow rounded-lg")              

            h3(class="text-2xl text-center my-5 font-extrabold text-gray-900") Mensaje
            
            if enviado 
                    p(class="p-2 text-center bg-green-100 text-green-600 uppercase font-bold") Mensaje Enviado    

            else if usuario  
                
                
                if errores
                    div(class="max-w-md mx-auto md-10")
                        each error in errores
                            p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

                form(method="POST")
                    input(type="hidden" name="_csrf" value=csrfToken)

                    div(class="space-y-5 text-center")
                        
                        textarea(id="mensaje" name="mensaje" class="w-full px-2 py-2 border border-gray-300 rounded-lg placeholder-gray-400 text-center" placeholder="Coloca Tu Mensaje aqui")

                        input(type="submit" value="Enviar Mensaje" class="bg-yellow-400 hover:bg-yellow-300 text-white font-bold uppercase text-sm w-full p-2 cursor-pointer") 
               

            else    
                div(class="flex flex-col items-center justify-center gap-2")
                    p(class="text-center") Si deseas dejar un mensaje
                    a(class="text-indigo-600" href="/auth/registro") debes crear una cuentta

